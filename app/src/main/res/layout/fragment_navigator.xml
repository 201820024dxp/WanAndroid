<?xml version="1.0" encoding="utf-8"?>
<com.wanandroid.app.widget.NoInterceptTouchSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigatorSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/navigatorTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabGravity="center"
            app:tabTextColor="?colorPrimary"
            app:tabTextAppearance="@style/TabLayout.TextAppearance"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/navigatorViewPager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</com.wanandroid.app.widget.NoInterceptTouchSwipeRefreshLayout>