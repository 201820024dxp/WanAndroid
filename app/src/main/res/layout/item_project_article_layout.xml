<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/secondary_background_container">

        <androidx.cardview.widget.CardView
            android:id="@+id/projectItemCard"
            android:layout_width="112dp"
            android:layout_height="184dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/projectItemImageView"
                android:layout_width="112dp"
                android:layout_height="184dp"
                tools:ignore="ContentDescription"
                android:src="@color/md_theme_primary"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/projectItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:text="wanandroid vue项目pc端wanandroid vue项目pc端wanandroid vue项目pc端wan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?colorOnSurface"
            app:layout_constraintTop_toTopOf="@id/projectItemCard"
            app:layout_constraintStart_toEndOf="@id/projectItemCard"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/projectItemContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:text="vue实现wanandroid pc端"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/projectItemTitle"
            app:layout_constraintStart_toEndOf="@id/projectItemCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/projectItemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text='2025-07-10 00:00'
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            app:layout_constraintStart_toEndOf="@id/projectItemCard"
            app:layout_constraintBottom_toBottomOf="@id/projectItemCard"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/projectItemAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ddddev"
            android:textSize="12sp"
            android:textColor="?colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="@id/projectItemDate"
            app:layout_constraintStart_toEndOf="@id/projectItemDate"
            app:layout_constraintBottom_toBottomOf="@id/projectItemDate" />

        <ImageView
            android:id="@+id/projectItemCollect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_un_collect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>